---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me";
const identity = {
    firstName: "Hokuto",
    religion: "Evangelical Christian",
    country: "Japan",
    occupation: "Evangelical Data Journalist"    
};

const livedIn = ["SF", "NYC", "DC"]

const skills = ["Kotlin Programming Language", "Neo4j Graph Database", "Devops", "Christian Journalism"]
const languages = new Map([
    ["Japanese", "Native"],
    ["Korean", "Semi-Native in Speaking and Listening in Christianity and Tech Vocabulary, beginner in reading and writing"],
    ["English", "Business and Academic level of fluency in speaking, listening, reading and writing, specialized in Christianity and Tech area"]
]);
---
<BaseLayout pageTitle={pageTitle}>

    <img src="https://scontent-itm1-1.xx.fbcdn.net/v/t31.18172-8/13244224_1101388796566364_6998049430149732507_o.jpg?stp=dst-jpg_p720x720&_nc_cat=105&ccb=1-7&_nc_sid=5f2048&_nc_ohc=-j70V7_QDFkAX-Als6q&_nc_ht=scontent-itm1-1.xx&oh=00_AfD4mvDPoMcA_EVCrmKaObiorF2UcFrCGfZhnvZNnEyTLQ&oe=66115A41" width="600px" />

    <p class="bold">Few Facts:</p>
    <ul>
        <li>My name is <span class="bold">{identity.firstName} Ide</span>, also known as <span class="bold">Joel</span>.</li>
        <li>I am an <span class="bold">{identity.religion}</span> converted from Atheist.</li>
        <li>I live in <span class="bold">{identity.country}</span>. Lived in <span class="bold">US</span> around 10 years ({livedIn.map((city) => city + ", ")} etc).</li>
        <li>I work as <span class="bold">{identity.occupation}</span>.</li>
    </ul>

    <p class="bold">Skills & Experience:</p>
    <ul>
        {skills.map((skill) => <li>{skill}</li> )}
    </ul>

    <p class="bold">Language & Fluency:</p>
    <ul>
        {Array.from(languages).map((language) => <li><span class="bold">{language[0]}:</span> <br>&emsp;{language[1]}</li> )}
    </ul>
</BaseLayout>
